@model IEnumerable<DotNetCoreWebApp.Models.PersonSummaryViewModel>
@{
    ViewData["Title"] = "Person";
}

<h1>Person</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>"Name"</th>
            <th>"Date of Birth</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>
                    <a asp-area="" asp-controller="Person" asp-action="Index" asp-route-id="@person.Id">@person.Name</a>
                </td>
                <td>@person.DateOfBirth</td>
            </tr>
        }
    </tbody>
</table>
