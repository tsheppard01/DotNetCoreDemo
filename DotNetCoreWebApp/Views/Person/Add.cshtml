@model DotNetCoreWebApp.Models.PersonViewModel

@{
    ViewData["Title"] = "Add Person";
}

<h1>Person</h1>

<form asp-controller="Person" asp-action="Add" method="post">
    <div class="form-group">
        <label>
            First name:
            <input type="text" class="form-control" asp-for="Forename" />
        </label>
        <span class="text-danger" asp-validation-for="Forename"></span>
    </div>
    <div class="form-group">
        <label>
            Surname:
            <input type="text" class="form-control" asp-for="Surname" />
        </label>
        <span class="text-danger" asp-validation-for="Surname"></span>
    </div>
    <div class="form-group">
        <label>
            Date of birth:
            <input type="text" class="form-control" asp-for="DateOfBirth" />
        </label>
        <span class="text-danger" asp-validation-for="DateOfBirth"></span>
    </div>
    <div>
        <label>
            Address Line 1
            <input type="text" class="form-control" asp-for="AddressLine1" />
        </label>
        <span class="text-danger" asp-validation-for="AddressLine1"></span>
    </div>
    <div>
        <label>
            Address Line 2
            <input type="text" class="form-control" asp-for="AddressLine2" />
        </label>
        <span class="text-danger" asp-validation-for="AddressLine2"></span>
    </div>
    <div>
        <label>
            City
            <input type="text" class="form-control" asp-for="City" />
        </label>
        <span class="text-danger" asp-validation-for="City"></span>
    </div>
    <div>
        <label>
            Email Address
            <input type="text" class="form-control" asp-for="EmailAddress" />
        </label>
        <span class="text-danger" asp-validation-for="EmailAddress"></span>
    </div>
    <div>
        <label>
            Username
            <input type="text" class="form-control" asp-for="Username" />
        </label>
        <span class="text-danger" asp-validation-for="Username"></span>
    </div>
    <div class="button-group">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
</form>